FROM node:20-alpine

# Install fonts for SVG text rendering (Cyrillic + Latin)
# ttf-dejavu includes Cyrillic glyphs and works reliably with librsvg in Alpine
RUN apk add --no-cache fontconfig ttf-dejavu \
    && fc-cache -fv \
    && fc-list | head -5
ENV FONTCONFIG_PATH=/etc/fonts

WORKDIR /app
COPY package*.json ./
RUN npm ci

COPY tsconfig.json ./
COPY src ./src

RUN npm run build

EXPOSE 3001
CMD ["node", "dist/index.js"]
